{
    "rulesDirectory":[
        "node_modules/codelyzer"
    ],
    "extends":[
        "tslint-eslint-rules",
        "tslint:recommended",
        "tslint-sonarts"
    ],
    "rules":{
        "max-line-length":[
            true,
            120
        ],
        "no-constant-condition":true,
        "no-inferrable-types":true,
        "object-literal-sort-keys":false,
        "no-hardcoded-credentials":false,
        "no-useless-cast":false,
        "parameters-max-number":false,
        "no-duplicate-string":false,
        "class-name":true,
        "comment-format":[
            true,
            "check-space"
        ],
        "indent":[
            true,
            "spaces"
        ],
        "eofline":true,
        "no-console":[
            true,
            "log",
            "error"
        ],
        "no-duplicate-variable":true,
        "no-duplicate-imports":true,
        "no-inner-declarations":[
            true,
            "function"
        ],
        "no-eval":true,
        "no-empty":false,
        "no-arg":true,
        "prefer-readonly":false,
        "no-internal-module":true,
        "no-trailing-whitespace":true,
        "no-bitwise":true,
        "no-unused-expression":true,
        "no-var-keyword":true,
        "one-line":[
            true,
            "check-catch",
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark":[
            true,
            "single",
            "avoid-escape"
        ],
        "semicolon":[
            true,
            "always"
        ],
        "typedef":[
            true,
            "call-signature",
            "parameter",
            "member-variable-declaration",
            "property-declaration",
            "object-destructuring",
            "array-destructuring"
        ],
        "typedef-whitespace":[
            true,
            {
                "call-signature":"nospace",
                "index-signature":"nospace",
                "parameter":"nospace",
                "property-declaration":"nospace",
                "variable-declaration":"nospace"
            }
        ],
        "variable-name":[
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ],
        "whitespace":[
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "directive-selector":[
            true,
            "attribute",
            "xm",
            "camelCase"
        ],
        "component-selector":[
            true,
            "element",
            "xm",
            "kebab-case"
        ]
    }
}
